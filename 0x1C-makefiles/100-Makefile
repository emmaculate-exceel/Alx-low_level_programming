CC = gcc
SRC = school.c main.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -fr
CFLAGS = -Wall -Werror -Wextra -pedantic
.PHONY : all clean oclean fclean re

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
%.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@
clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) $(OBJ)
fclean:
	$(RM) $(NAME)
re: fclean all
